<div class="wrapper">
      <div class=" container form-signin">
            <%= simple_form_for @film do |f| %>
                  <%= f.input :titre, placeholder: "Name", label: "Product name" %>
                  <%= f.input :date %>
                  <%= f.input :link, as: :url, label: "URL" %>
                  <%= f.input :style, as: :text, placeholder: "long resume", label: "Description" %>
                  <%= f.input :tags %>
                  <%= f.button :submit, "ADD", class: "btn btn-primary btn-lg btn-block btn-color" %>
              <% end %>
      </div>
</div>